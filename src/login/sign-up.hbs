{{> login/styles}}

<div class="login-header">
  <img class="brand-logo" src="{{ship.appearance.logo}}" alt="Logo" />
  <h1 class="text-center">{{t 'signup_title'}}</h1>
  <p class="text-center">
    {{t "Already have an account?"}}
    <a href="#" data-hull-action="renderSection" data-hull-section="sign-in">{{t "Log in"}}</a>
  </p>
</div>

{{#if ship.settings.social.enabled}}
<div class="social-login">
  {{#each authServices}}
  <button data-hull-action="login" data-hull-provider="{{@key}}" class="btn btn-block social-btn social-btn-{{@key}}">
    <i class="fa fa-{{@key}}"></i>
    &nbsp;
    {{t "Sign up with"}} {{humanize @key}}
  </button>
  {{/each}}
</div>
<div class="or-separator">
  <span>{{t "or"}}</span>
</div>
{{/if}}

<form class="signup-form" data-action="signup">
  <ul class="list-group">
    {{#each ship.settings.signup.schema.properties}}
    <li class="list-group-item">
      <input type="{{type}}" name="{{@key}}" class="form-control" placeholder="{{description}}" required>
    </li>
    {{/each}}
    {{#if ship.settings.general.accept_marketing}}
    <li class="list-group-item accept-marketing">
      <input id="accept-marketing" type="checkbox" value="true" name='accept_marketing' {{#ifEqual ship.settings.general.accept_marketing "checked"}}checked='checked'{{/ifEqual}}>
      <label for="accept-marketing">{{t "accept_marketing_question"}}</label>
    </li>
    {{/if}}
  </ul>

  <button class="btn btn-block btn-primary" type="submit">
    {{t "Sign up"}}
  </button>

</form>

<div class="login-footer text-center">
  {{t "By signing up you agree to our"}}
  <a href="{{ship.settings.general.privacy_polycy_url}}" target="_blank">{{t "Privacy Policy"}}</a>
  {{t "and"}}
  <a href="{{ship.settings.general.terms_of_service_url}}" target="_blank">{{t "Terms of Service"}}</a>
  </div>
</div>
