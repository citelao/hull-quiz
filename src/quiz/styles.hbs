{{#if ship.config.appearance.stylesheet_url}}
  <link rel="stylesheet" href="{{ship.config.appearance.stylesheet_url}}">
{{/if}}

<style>

body {
  color: {{state.options.text_color}};
  color: {{state.options.text_color_alpha}};
  background-color: {{state.options.background_color}};
}

a {
  color: {{state.options.text_color}};
  color: {{state.options.text_color_alpha}};
}

h1, h2, h3, h4, h5, h6, a:hover, a:active {
  color: {{state.options.text_color}};
}

.main {
  background: linear-gradient(to bottom,
  {{state.options.background_color_alpha}} 60%, {{state.options.background_color}} 100%);
}

.button, .button:hover, .button:focus {
  color: {{state.options.button_text_color}};
  background-color: {{state.options.button_background_color}}
}

.main::after {
  content: "";
  background: url({{state.options.background_image}});
  background-position: top center;
  background-size: cover;
  opacity: {{state.options.background_image_opacity}};
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;
  -webkit-filter: blur({{state.options.background_image_blur}}px);
  -moz-filter: blur({{state.options.background_image_blur}}px);
  -o-filter: blur({{state.options.background_image_blur}}px);
  -ms-filter: blur({{state.options.background_image_blur}}px);
  filter: blur({{state.options.background_image_blur}}px);
}

.answer {
  background: {{state.options.answer_background_color}};
  border: 1px solid {{state.options.answer_border_color}};
}

.answer:hover,
.answer:focus {
  background: {{state.options.answer_background_color_active}};
  border: 1px solid {{state.options.answer_border_color_active}};
  box-shadow: 0 0 10px {{state.options.answer_border_color_active}};
}

ul.pagination li a {
  color: {{state.options.text_color}};
  text-decoration: none;
}

ul.pagination li:hover a {
  color: {{state.options.button_text_color}};
  background-color: {{state.options.button_background_color}}
}

.progress {
  background: {{state.options.answer_background_color}};
}

.progress .meter {
  background-color: {{state.options.button_background_color}}
}

</style>
